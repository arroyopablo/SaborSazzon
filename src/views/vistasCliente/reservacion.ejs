<body class="fondo-reserva">
    <!---menu de navegacion cliente superior-->
    <%- include ("../partials/navcliente") %>

    <p>

    </p>
<!-- Titulo Reservacion -->
<div class="bradcam_area overlay">
    <h3>Reservaci√≥n</h3>
</div>

<!---Reservacion-->

<!---mensaje de error-->
<ul class="text-center errores">
    <% if(typeof errors != 'undefined'){ %> <% errors.forEach(error=>{ %>
        <li><%= error.message  %></li>
    <% }) %> <% } %>
</ul>


<form action="/reservacion"  class="formulario text-center" method="POST">
    <h1 class="pacifico grande azul">Ven y conoce nuestro restaurante</h1>
    <div class="contenedor">
    

        <div class="input-contenedor">
            <i class="fas fa-user icon"></i>
            <span class="form-label">Dia</span>
            <input class="form-control" type="date" id="dia_user" name="dia_user" required>
        </div>

        <div class="input-contenedor">
            <i class="fas fa-address-card icon"></i>
            <span class="form-label">Hora</span>
            <select class="form-control" type="text" id="hora_user" name="hora_user" required>
                <option>11PM</option>
                <option>12PM</option>
                <option>1PM</option>
                <option>2PM</option>
                <option>3PM</option>
                <option>4PM</option>
                <option>5PM</option>
                <option>6PM</option>
            </select>

        </div>

        <div class="input-contenedor">
            <i class="fas fa-user icon"></i>
            <span class="form-label">Numero de personas (max 5)</span>
            <input class="form-control" type="text" id="numpersonas_user" name="numpersonas_user" required>
        </div>


        <input type="submit" value="Reservar" class="button">
        
    </div>
</form>
<p>	
</p>

